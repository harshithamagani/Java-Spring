	<div id="wrapper">
		<h1>${product.name}</h1>
		<p>Categories:</p>
			<c:forEach items="${product.categories}" var="category">
				<p>${category.name}</p>
			</c:forEach>
			
		<form:form method="post" action="/add/category2/product" modelAttribute="category">
			<p>
				<form:label path="category">Add Category:</form:label>
				<form:select path="id">
					<c:forEach items="${categories}" var="category">
						<form:option value="${category.name}"></form:option>
					</c:forEach>
				</form:select>
